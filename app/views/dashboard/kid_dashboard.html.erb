<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-extrabold text-gray-800">Hey, <%= current_user.name.split.first %>!</h1>
      <p class="text-gray-600 mt-1">Keep earning badges and points!</p>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="stat-card gradient-coral">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm opacity-90">Total Points</p>
          <p class="text-3xl font-extrabold mt-1"><%= current_user.available_points %></p>
          <p class="text-xs mt-1 opacity-80">Keep going!</p>
        </div>
        <div class="p-3 rounded-xl bg-white/20">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="stat-card gradient-purple">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm opacity-90">Badges Earned</p>
          <p class="text-3xl font-extrabold mt-1"><%= @earned_badges.count %></p>
          <p class="text-xs mt-1 opacity-80">Nice work!</p>
        </div>
        <div class="p-3 rounded-xl bg-white/20">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="stat-card gradient-yellow">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm opacity-90">In Progress</p>
          <p class="text-3xl font-extrabold mt-1"><%= @in_progress_badges.count %></p>
          <p class="text-xs mt-1 opacity-80">Almost there!</p>
        </div>
        <div class="p-3 rounded-xl bg-white/20">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="stat-card gradient-teal">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm opacity-90">Pending Review</p>
          <p class="text-3xl font-extrabold mt-1"><%= @pending_badges.count %></p>
          <p class="text-xs mt-1 opacity-80">Waiting for approval</p>
        </div>
        <div class="p-3 rounded-xl bg-white/20">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <% if @denied_badges.any? %>
    <div>
      <h2 class="text-xl font-bold text-gray-800 mb-4">Needs Revision</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <% @denied_badges.each do |badge| %>
          <%= render "badges/badge_card", badge: badge, state: :denied %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @pending_badges.any? %>
    <div>
      <h2 class="text-xl font-bold text-gray-800 mb-4">Pending Review</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <% @pending_badges.each do |badge| %>
          <%= render "badges/badge_card", badge: badge, state: :pending %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @ready_badges.any? %>
    <div>
      <h2 class="text-xl font-bold text-gray-800 mb-4">Ready to Submit</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <% @ready_badges.each do |badge| %>
          <%= render "badges/badge_card", badge: badge, state: :ready %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @in_progress_badges.any? %>
    <div>
      <h2 class="text-xl font-bold text-gray-800 mb-4">In Progress</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <% @in_progress_badges.each do |badge| %>
          <%= render "badges/badge_card", badge: badge, state: :in_progress %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Badge Grid Dashboard -->
  <div>
    <h2 class="text-xl font-bold text-gray-800 mb-4">Badge Progress</h2>

    <% if @categories.any? %>
      <div class="space-y-4">
        <% @categories.each do |category| %>
          <%
            # Get all badges for this category (earned, pending, in_progress, and available)
            category_badges = Badge.published
              .where(family: current_user.family, badge_category_id: category.id)
              .joins(groups: :group_memberships)
              .where(group_memberships: { user_id: current_user.id })
              .distinct
              .includes(:badge_category, :badge_challenges, :badge_submissions)
              .order(:title)
          %>

          <% if category_badges.any? %>
            <div class="card p-4">
              <h3 class="text-lg font-bold text-gray-700 mb-3"><%= category.name %></h3>
              <div class="overflow-x-auto -mx-2 px-2">
                <div class="flex gap-3 pb-2" style="min-width: min-content;">
                  <% category_badges.each do |badge| %>
                    <div style="min-width: 200px; max-width: 200px;">
                      <%= render "badges/badge_grid_card", badge: badge, state: badge.state_for(current_user) %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <%
          # Handle uncategorized badges
          uncategorized_badges = Badge.published
            .where(family: current_user.family, badge_category_id: nil)
            .joins(groups: :group_memberships)
            .where(group_memberships: { user_id: current_user.id })
            .distinct
            .includes(:badge_category, :badge_challenges, :badge_submissions)
            .order(:title)
        %>

        <% if uncategorized_badges.any? %>
          <div class="card p-4">
            <h3 class="text-lg font-bold text-gray-700 mb-3">Other</h3>
            <div class="overflow-x-auto -mx-2 px-2">
              <div class="flex gap-3 pb-2" style="min-width: min-content;">
                <% uncategorized_badges.each do |badge| %>
                  <div style="min-width: 200px; max-width: 200px;">
                    <%= render "badges/badge_grid_card", badge: badge, state: badge.state_for(current_user) %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @available_badges.empty? && @in_progress_badges.empty? && @pending_badges.empty? && @earned_badges.empty? && @denied_badges.empty? && @ready_badges.empty? %>
    <div class="card">
      <div class="empty-state">
        <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
        </svg>
        <h3 class="empty-state-title">No badges yet</h3>
        <p class="empty-state-text">Ask your parents to create some badges for you to earn!</p>
      </div>
    </div>
  <% end %>
</div>
