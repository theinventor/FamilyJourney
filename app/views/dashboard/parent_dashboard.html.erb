<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-extrabold text-gray-800">Welcome back!</h1>
      <p class="text-gray-600 mt-1">Here's what's happening in <%= current_user.family.name %></p>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="stat-card gradient-coral">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm opacity-90">Pending Reviews</p>
          <p class="text-3xl font-extrabold mt-1"><%= @pending_reviews %></p>
          <% if @pending_reviews > 0 %>
            <%= link_to "Review now", admin_reviews_path, class: "text-xs mt-1 opacity-80 underline" %>
          <% else %>
            <p class="text-xs mt-1 opacity-80">All caught up!</p>
          <% end %>
        </div>
        <div class="p-3 rounded-xl bg-white/20">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="stat-card gradient-yellow">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm opacity-90">Prize Requests</p>
          <p class="text-3xl font-extrabold mt-1"><%= @pending_redemptions %></p>
          <% if @pending_redemptions > 0 %>
            <%= link_to "Review now", admin_redemptions_path, class: "text-xs mt-1 opacity-80 underline" %>
          <% else %>
            <p class="text-xs mt-1 opacity-80">No pending requests</p>
          <% end %>
        </div>
        <div class="p-3 rounded-xl bg-white/20">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="stat-card gradient-purple">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm opacity-90">Total Badges</p>
          <p class="text-3xl font-extrabold mt-1"><%= @total_badges %></p>
          <p class="text-xs mt-1 opacity-80"><%= @published_badges %> published</p>
        </div>
        <div class="p-3 rounded-xl bg-white/20">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="stat-card gradient-teal">
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm opacity-90">Family Members</p>
          <p class="text-3xl font-extrabold mt-1"><%= @total_kids %></p>
          <p class="text-xs mt-1 opacity-80">kids in <%= @total_groups %> groups</p>
        </div>
        <div class="p-3 rounded-xl bg-white/20">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div class="card">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-bold text-gray-800">Quick Actions</h2>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <%= link_to new_admin_badge_path, class: "p-4 rounded-xl bg-purple-50 hover:bg-purple-100 transition group" do %>
          <div class="p-2 rounded-lg gradient-purple w-fit mb-2">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </div>
          <p class="font-semibold text-gray-800">Create Badge</p>
          <p class="text-sm text-gray-500">Add a new badge</p>
        <% end %>

        <%= link_to new_admin_group_path, class: "p-4 rounded-xl bg-teal-50 hover:bg-teal-100 transition group" do %>
          <div class="p-2 rounded-lg gradient-teal w-fit mb-2">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <p class="font-semibold text-gray-800">Create Group</p>
          <p class="text-sm text-gray-500">Organize your kids</p>
        <% end %>

        <%= link_to new_admin_prize_path, class: "p-4 rounded-xl bg-yellow-50 hover:bg-yellow-100 transition group" do %>
          <div class="p-2 rounded-lg gradient-yellow w-fit mb-2">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
            </svg>
          </div>
          <p class="font-semibold text-gray-800">Add Prize</p>
          <p class="text-sm text-gray-500">Reward your kids</p>
        <% end %>

        <%= link_to new_admin_badge_category_path, class: "p-4 rounded-xl bg-pink-50 hover:bg-pink-100 transition group" do %>
          <div class="p-2 rounded-lg gradient-pink w-fit mb-2">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
          <p class="font-semibold text-gray-800">Add Category</p>
          <p class="text-sm text-gray-500">Organize badges</p>
        <% end %>
      </div>
    </div>

    <div class="card">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-bold text-gray-800">Kids</h2>
        <%= link_to "View All", admin_groups_path, class: "text-sm text-purple-600 hover:underline" %>
      </div>
      <% if current_user.family.kids.any? %>
        <div class="space-y-3">
          <% current_user.family.kids.each do |kid| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-xl">
              <div class="flex items-center gap-3">
                <div class="avatar avatar-md gradient-coral text-white">
                  <%= kid.name.first.upcase %>
                </div>
                <div>
                  <p class="font-semibold text-gray-800"><%= kid.name %></p>
                  <p class="text-sm text-gray-500"><%= kid.groups.map(&:name).join(", ").presence || "No groups" %></p>
                </div>
              </div>
              <div class="text-right">
                <p class="font-bold text-yellow-600"><%= kid.available_points %> pts</p>
                <p class="text-xs text-gray-500"><%= kid.badge_submissions.approved.count %> badges</p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-4">No kids added yet. Create a group and add members.</p>
      <% end %>
    </div>
  </div>

  <div class="card">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-bold text-gray-800">API Access</h2>
      <div class="p-2 rounded-lg gradient-teal w-fit">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
        </svg>
      </div>
    </div>

    <p class="text-gray-600 text-sm mb-4">Use this token to access the Family Journey API. Keep it secure and don't share it publicly.</p>

    <div class="space-y-3">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Your API Token</label>
        <div class="flex items-center gap-2">
          <input type="text"
                 id="api-token"
                 value="<%= current_user.api_token %>"
                 readonly
                 class="flex-1 px-4 py-2 bg-gray-50 border border-gray-300 rounded-lg font-mono text-sm"
          >
          <button onclick="copyApiToken()"
                  class="btn-primary whitespace-nowrap"
                  id="copy-btn">
            Copy
          </button>
        </div>
      </div>

      <div class="flex items-start gap-2 p-3 bg-blue-50 rounded-lg">
        <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="text-sm text-blue-800">
          <p class="font-semibold mb-1">Getting Started</p>
          <p>Include this token in the Authorization header: <code class="bg-white px-2 py-0.5 rounded">Authorization: Bearer YOUR_TOKEN</code></p>
          <p class="mt-2">See the <%= link_to "API documentation", api_docs_path, class: "underline font-medium" %> for available endpoints.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function copyApiToken() {
  const tokenInput = document.getElementById('api-token');
  const copyBtn = document.getElementById('copy-btn');

  tokenInput.select();
  tokenInput.setSelectionRange(0, 99999); // For mobile devices

  navigator.clipboard.writeText(tokenInput.value).then(() => {
    const originalText = copyBtn.textContent;
    copyBtn.textContent = 'Copied!';
    copyBtn.classList.add('bg-green-600');

    setTimeout(() => {
      copyBtn.textContent = originalText;
      copyBtn.classList.remove('bg-green-600');
    }, 2000);
  }).catch(err => {
    alert('Failed to copy token');
  });
}
</script>
