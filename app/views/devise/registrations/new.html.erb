<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold gradient-text">FamilyJourney</h1>
      <h2 class="mt-6 text-3xl font-bold text-gray-900">Create your account</h2>
      <p class="mt-2 text-gray-600">Start your family's badge journey today!</p>
    </div>

    <div class="bg-white rounded-2xl shadow-card p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%# Honeypot field - hidden from real users, bots will fill it %>
        <div style="position: absolute; left: -9999px;" aria-hidden="true">
          <%= text_field_tag :website, nil, tabindex: "-1", autocomplete: "off" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mb-1"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition" %>
        </div>

        <div>
          <%= f.submit "Create account", class: "w-full py-3 px-4 rounded-xl font-semibold text-white gradient-coral hover:opacity-90 transition cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-gray-600">Already have an account?
          <%= link_to "Sign in", new_session_path(resource_name), class: "text-purple-600 hover:text-purple-800 font-medium" %>
        </p>
      </div>
    </div>
  </div>
</div>
