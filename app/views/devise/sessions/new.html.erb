<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold gradient-text">FamilyJourney</h1>
      <h2 class="mt-6 text-3xl font-bold text-gray-900">Welcome back!</h2>
      <p class="mt-2 text-gray-600">Sign in to your account</p>
    </div>

    <div class="bg-white rounded-2xl shadow-card p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500" %>
            <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", class: "w-full py-3 px-4 rounded-xl font-semibold text-white gradient-coral hover:opacity-90 transition cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center space-y-2">
        <%= link_to "Create an account", new_registration_path(resource_name), class: "text-purple-600 hover:text-purple-800 font-medium" %>
        <br>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-500 hover:text-gray-700 text-sm" %>
      </div>
    </div>
  </div>
</div>
