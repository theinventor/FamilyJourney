<div class="max-w-2xl mx-auto">
  <div class="page-header">
    <h1 class="page-title">Request Prize</h1>
    <%= link_to "Back", prize_path(@prize), class: "btn-outline" %>
  </div>

  <div class="card mb-6">
    <div class="flex items-start gap-4">
      <% if @prize.image.attached? %>
        <%= image_tag @prize.image, class: "w-24 h-24 object-cover rounded-xl" %>
      <% else %>
        <div class="w-24 h-24 bg-gradient-to-br from-yellow-100 to-orange-100 rounded-xl flex items-center justify-center">
          <svg class="w-12 h-12 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
          </svg>
        </div>
      <% end %>
      <div>
        <h2 class="text-xl font-bold text-gray-800"><%= @prize.name %></h2>
        <div class="flex items-center gap-4 mt-2">
          <span class="inline-flex items-center gap-1 text-yellow-600 font-bold">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.736 6.979C9.208 6.193 9.696 6 10 6c.304 0 .792.193 1.264.979a1 1 0 001.715-1.029C12.279 4.784 11.232 4 10 4s-2.279.784-2.979 1.95c-.285.475-.507 1-.67 1.55H6a1 1 0 000 2h.013a9.358 9.358 0 000 1H6a1 1 0 100 2h.351c.163.55.385 1.075.67 1.55C7.721 15.216 8.768 16 10 16s2.279-.784 2.979-1.95a1 1 0 10-1.715-1.029c-.472.786-.96.979-1.264.979-.304 0-.792-.193-1.264-.979a4.265 4.265 0 01-.264-.521H10a1 1 0 100-2H8.017a7.36 7.36 0 010-1H10a1 1 0 100-2H8.472c.08-.185.167-.36.264-.521z"></path>
            </svg>
            <%= @prize.point_cost %> points
          </span>
          <span class="text-gray-500">Your balance: <%= current_user.available_points %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <%= form_with model: @redemption, url: redemptions_path(prize_id: @prize.id), class: "space-y-6" do |f| %>
      <% if @redemption.errors.any? %>
        <div class="p-4 rounded-xl bg-red-50 text-red-800 border border-red-200">
          <h3 class="font-semibold mb-2">Please fix the following errors:</h3>
          <ul class="list-disc list-inside text-sm">
            <% @redemption.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :kid_note, "Note for Parents (Optional)", class: "form-label" %>
        <%= f.text_area :kid_note, rows: 3, class: "form-textarea",
            placeholder: "Add a note for your parents..." %>
      </div>

      <div class="p-4 rounded-xl bg-yellow-50 border border-yellow-200">
        <p class="text-yellow-800">
          <strong>Note:</strong> This will use <strong><%= @prize.point_cost %></strong> of your points.
          After approval, you'll have <strong><%= current_user.available_points - @prize.point_cost %></strong> points left.
        </p>
      </div>

      <div class="flex gap-3 pt-4 border-t">
        <%= f.submit "Request Prize", class: "btn-success" %>
        <%= link_to "Cancel", prize_path(@prize), class: "btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
