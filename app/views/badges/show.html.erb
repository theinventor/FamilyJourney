<%
  state_config = {
    available: { bg: "gradient-purple", status: "Available", status_class: "status-available" },
    in_progress: { bg: "gradient-teal", status: "In Progress", status_class: "status-in-progress" },
    ready: { bg: "gradient-green", status: "Ready to Submit", status_class: "status-ready" },
    pending: { bg: "gradient-yellow", status: "Pending Review", status_class: "status-pending" },
    earned: { bg: "gradient-green", status: "Earned!", status_class: "status-earned" },
    denied: { bg: "bg-red-500", status: "Needs Revision", status_class: "status-denied" }
  }[@state]
%>

<div class="max-w-3xl mx-auto space-y-8">
  <div class="card">
    <div class="flex items-start gap-6">
      <div class="p-4 rounded-2xl <%= state_config[:bg] %> flex-shrink-0">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
        </svg>
      </div>
      <div class="flex-1">
        <div class="flex items-start justify-between">
          <div>
            <h1 class="text-2xl font-extrabold text-gray-800"><%= @badge.title %></h1>
            <div class="flex items-center gap-3 mt-2">
              <span class="<%= state_config[:status_class] %>"><%= state_config[:status] %></span>
              <span class="inline-flex items-center gap-1 text-yellow-600 font-semibold">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.736 6.979C9.208 6.193 9.696 6 10 6c.304 0 .792.193 1.264.979a1 1 0 001.715-1.029C12.279 4.784 11.232 4 10 4s-2.279.784-2.979 1.95c-.285.475-.507 1-.67 1.55H6a1 1 0 000 2h.013a9.358 9.358 0 000 1H6a1 1 0 100 2h.351c.163.55.385 1.075.67 1.55C7.721 15.216 8.768 16 10 16s2.279-.784 2.979-1.95a1 1 0 10-1.715-1.029c-.472.786-.96.979-1.264.979-.304 0-.792-.193-1.264-.979a4.265 4.265 0 01-.264-.521H10a1 1 0 100-2H8.017a7.36 7.36 0 010-1H10a1 1 0 100-2H8.472c.08-.185.167-.36.264-.521z"></path>
                </svg>
                <%= @badge.points %> points
              </span>
              <% if @badge.badge_category %>
                <span class="text-sm text-gray-500"><%= @badge.badge_category.name %></span>
              <% end %>
            </div>
          </div>
          <%= link_to "Back", dashboard_path, class: "btn-secondary btn-sm" %>
        </div>

        <% if @badge.description.present? %>
          <p class="text-gray-600 mt-4"><%= @badge.description %></p>
        <% end %>
      </div>
    </div>
  </div>

  <% if @badge.instructions.present? %>
    <div class="card">
      <h2 class="text-lg font-bold text-gray-800 mb-3">Instructions</h2>
      <p class="text-gray-700 whitespace-pre-wrap"><%= @badge.instructions %></p>
    </div>
  <% end %>

  <% if @badge.multi_challenge? %>
    <div class="card">
      <h2 class="text-lg font-bold text-gray-800 mb-4">
        Challenges
        <span class="text-sm font-normal text-gray-500">
          (<%= @badge.challenges_completed_for(current_user) %>/<%= @badge.badge_challenges.count %> completed)
        </span>
      </h2>

      <div class="space-y-3">
        <% @badge.badge_challenges.each_with_index do |challenge, index| %>
          <% completed = @completions[challenge.id] %>
          <div class="flex gap-4 p-4 rounded-xl <%= completed ? 'bg-green-50' : 'bg-gray-50' %>">
            <div class="flex-shrink-0">
              <% if completed %>
                <div class="w-8 h-8 rounded-full gradient-green flex items-center justify-center text-white">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              <% else %>
                <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 font-bold">
                  <%= index + 1 %>
                </div>
              <% end %>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-gray-800"><%= challenge.title %></h3>
              <% if challenge.description.present? %>
                <p class="text-sm text-gray-600 mt-1"><%= challenge.description %></p>
              <% end %>
            </div>
            <% unless completed %>
              <%= link_to new_challenge_completion_path(badge_challenge_id: challenge.id), class: "btn-primary btn-sm" do %>
                Complete
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @state == :denied && @submission %>
    <div class="card border-2 border-red-200 bg-red-50">
      <h2 class="text-lg font-bold text-red-800 mb-2">Feedback from Parent</h2>
      <p class="text-red-700"><%= @submission.parent_feedback %></p>
      <p class="text-sm text-red-600 mt-2">Please make the requested changes and submit again.</p>
    </div>
  <% end %>

  <% if @state == :earned && @submission %>
    <div class="card border-2 border-green-200 bg-green-50">
      <div class="flex items-center gap-3">
        <div class="p-2 rounded-full bg-green-200">
          <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-bold text-green-800">Badge Earned!</h2>
          <p class="text-green-700">Approved on <%= @submission.reviewed_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
      <% if @submission.parent_feedback.present? %>
        <p class="mt-3 text-green-700"><%= @submission.parent_feedback %></p>
      <% end %>
    </div>
  <% end %>

  <% if @state == :pending %>
    <div class="card border-2 border-yellow-200 bg-yellow-50">
      <div class="flex items-center gap-3">
        <div class="p-2 rounded-full bg-yellow-200">
          <svg class="w-6 h-6 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-bold text-yellow-800">Waiting for Review</h2>
          <p class="text-yellow-700">Submitted on <%= @submission.submitted_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>
      </div>
    </div>
  <% end %>

  <% if [:available, :ready, :denied].include?(@state) && current_user.kid? %>
    <% if @badge.all_challenges_completed_for?(current_user) || !@badge.multi_challenge? %>
      <div class="card">
        <h2 class="text-lg font-bold text-gray-800 mb-4">Submit for Approval</h2>
        <%= link_to "Submit Badge", new_badge_submission_path(@badge), class: "btn-primary w-full" %>
      </div>
    <% end %>
  <% end %>
</div>
