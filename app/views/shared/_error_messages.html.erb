<% if resource.errors.any? %>
  <div class="bg-red-50 border border-red-200 rounded-xl p-4 mb-4">
    <div class="flex items-start gap-3">
      <svg class="w-5 h-5 text-red-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"></path>
      </svg>
      <div>
        <h3 class="text-sm font-medium text-red-800">
          <%= pluralize(resource.errors.count, "error") %> prevented this from being saved:
        </h3>
        <ul class="mt-2 text-sm text-red-600 list-disc list-inside space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
