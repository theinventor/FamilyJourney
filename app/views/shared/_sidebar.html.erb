<aside class="fixed left-0 top-0 h-full w-64 bg-white shadow-float p-6 flex flex-col">
  <div class="mb-8">
    <h1 class="text-2xl font-extrabold text-gray-800">
      <span class="gradient-text">Family</span>Journey
    </h1>
    <p class="text-sm text-gray-500 mt-1"><%= current_user.family.name %></p>
  </div>

  <nav class="flex-1 space-y-2 overflow-y-auto">
    <%= link_to dashboard_path, class: "nav-link #{current_page?(dashboard_path) ? 'nav-link-active' : ''}" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
      </svg>
      <span>Dashboard</span>
    <% end %>

    <% if current_user.kid? %>
      <%= link_to prizes_path, class: "nav-link #{current_page?(prizes_path) ? 'nav-link-active' : ''}" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
        </svg>
        <span>Prizes</span>
      <% end %>

      <%= link_to redemptions_path, class: "nav-link #{current_page?(redemptions_path) ? 'nav-link-active' : ''}" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
        </svg>
        <span>My Redemptions</span>
      <% end %>

      <%= link_to profile_path, class: "nav-link #{current_page?(profile_path) ? 'nav-link-active' : ''}" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span>Profile</span>
      <% end %>
    <% end %>

    <% if current_user.parent? %>
      <div class="pt-4 mt-4 border-t border-gray-200">
        <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Admin</p>

        <%= link_to admin_kids_path, class: "nav-link #{request.path.start_with?('/admin/kids') ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
          <span>Kids</span>
        <% end %>

        <%= link_to admin_groups_path, class: "nav-link #{request.path.start_with?('/admin/groups') ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span>Groups</span>
        <% end %>

        <%= link_to admin_badge_categories_path, class: "nav-link #{request.path.start_with?('/admin/badge_categories') ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          <span>Categories</span>
        <% end %>

        <%= link_to admin_badges_path, class: "nav-link #{request.path.start_with?('/admin/badges') ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
          </svg>
          <span>Badges</span>
        <% end %>

        <%= link_to admin_reviews_path, class: "nav-link #{request.path.start_with?('/admin/reviews') ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          <span>Review Queue</span>
        <% end %>

        <%= link_to admin_prizes_path, class: "nav-link #{request.path.start_with?('/admin/prizes') ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
          </svg>
          <span>Prizes</span>
        <% end %>

        <%= link_to admin_redemptions_path, class: "nav-link #{request.path.start_with?('/admin/redemptions') ? 'nav-link-active' : ''}" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
          <span>Redemptions</span>
        <% end %>

        <div class="pt-4 mt-4 border-t border-gray-200">
          <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Family</p>

          <%= link_to admin_family_members_path, class: "nav-link #{request.path.start_with?('/admin/family_members') || request.path.start_with?('/admin/invites') ? 'nav-link-active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span>Parents</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </nav>

  <div class="pt-4 border-t border-gray-200">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-10 h-10 rounded-full gradient-coral flex items-center justify-center text-white font-bold">
        <%= current_user.name.first.upcase %>
      </div>
      <div>
        <p class="font-semibold text-gray-800"><%= current_user.name %></p>
        <p class="text-xs text-gray-500 capitalize"><%= current_user.role %></p>
      </div>
    </div>
    <%= button_to destroy_user_session_path, method: :delete, data: { turbo: false }, class: "w-full text-left text-sm text-gray-500 hover:text-gray-700 transition" do %>
      Sign out
    <% end %>
  </div>
</aside>
