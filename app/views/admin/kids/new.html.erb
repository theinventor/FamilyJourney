<div class="page-header">
  <h1 class="page-title">Add Kid</h1>
  <%= link_to "Back", admin_kids_path, class: "btn-outline" %>
</div>

<div class="card max-w-lg">
  <%= form_with model: @kid, url: admin_kids_path, local: true, class: "space-y-6" do |f| %>
    <%= render "shared/error_messages", resource: @kid %>

    <div>
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-input", placeholder: "e.g., Bart", autofocus: true %>
    </div>

    <div>
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-input", placeholder: "e.g., bart@example.com" %>
      <p class="text-xs text-gray-500 mt-1">Used for login. Can be a family email with +suffix (e.g., family+bart@example.com)</p>
    </div>

    <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-blue-500 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"></path>
        </svg>
        <div>
          <p class="text-sm font-medium text-blue-800">A temporary password will be generated</p>
          <p class="text-sm text-blue-600">You'll see it after creating the account. Share it with your kid so they can log in.</p>
        </div>
      </div>
    </div>

    <div class="flex gap-3">
      <%= f.submit "Add Kid", class: "btn-primary" %>
      <%= link_to "Cancel", admin_kids_path, class: "btn-outline" %>
    </div>
  <% end %>
</div>
