<%= form_with model: [:admin, badge_category], class: "space-y-6" do |f| %>
  <% if badge_category.errors.any? %>
    <div class="p-4 rounded-xl bg-red-50 text-red-800 border border-red-200">
      <h3 class="font-semibold mb-2">Please fix the following errors:</h3>
      <ul class="list-disc list-inside text-sm">
        <% badge_category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-input", placeholder: "e.g., Chores, Skills, Homework, Activities" %>
  </div>

  <div class="flex gap-3">
    <%= f.submit badge_category.persisted? ? "Update Category" : "Create Category", class: "btn-primary" %>
    <%= link_to "Cancel", admin_badge_categories_path, class: "btn-secondary" %>
  </div>
<% end %>
