<%= form_with model: [:admin, group], class: "space-y-6" do |f| %>
  <% if group.errors.any? %>
    <div class="p-4 rounded-xl bg-red-50 text-red-800 border border-red-200">
      <h3 class="font-semibold mb-2">Please fix the following errors:</h3>
      <ul class="list-disc list-inside text-sm">
        <% group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-input", placeholder: "e.g., All Kids, Team A, Older Kids" %>
  </div>

  <div>
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 3, class: "form-textarea", placeholder: "Optional description for this group..." %>
  </div>

  <div class="flex gap-3">
    <%= f.submit group.persisted? ? "Update Group" : "Create Group", class: "btn-primary" %>
    <%= link_to "Cancel", group.persisted? ? admin_group_path(group) : admin_groups_path, class: "btn-secondary" %>
  </div>
<% end %>
