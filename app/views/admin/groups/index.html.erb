<div class="page-header">
  <h1 class="page-title">Groups</h1>
  <%= link_to "New Group", new_admin_group_path, class: "btn-primary" %>
</div>

<% if @groups.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @groups.each do |group| %>
      <div class="card card-hover">
        <div class="flex items-start justify-between mb-4">
          <div>
            <h3 class="text-lg font-bold text-gray-800"><%= group.name %></h3>
            <p class="text-sm text-gray-500"><%= pluralize(group.users.count, "member") %></p>
          </div>
          <div class="p-2 rounded-xl gradient-teal">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
        </div>

        <% if group.description.present? %>
          <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= group.description %></p>
        <% end %>

        <% if group.users.any? %>
          <div class="flex -space-x-2 mb-4">
            <% group.users.limit(5).each do |user| %>
              <div class="avatar avatar-sm gradient-purple text-white border-2 border-white" title="<%= user.name %>">
                <%= user.name.first.upcase %>
              </div>
            <% end %>
            <% if group.users.count > 5 %>
              <div class="avatar avatar-sm bg-gray-200 text-gray-600 border-2 border-white">
                +<%= group.users.count - 5 %>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="flex gap-2">
          <%= link_to "View", admin_group_path(group), class: "btn-secondary btn-sm flex-1" %>
          <%= link_to "Edit", edit_admin_group_path(group), class: "btn-outline btn-sm flex-1" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card">
    <div class="empty-state">
      <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
      </svg>
      <h3 class="empty-state-title">No groups yet</h3>
      <p class="empty-state-text mb-4">Create groups to organize your kids and assign badges.</p>
      <%= link_to "Create Your First Group", new_admin_group_path, class: "btn-primary" %>
    </div>
  </div>
<% end %>
