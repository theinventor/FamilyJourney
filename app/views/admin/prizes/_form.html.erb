<%= form_with model: [:admin, prize], class: "space-y-6" do |f| %>
  <% if prize.errors.any? %>
    <div class="p-4 rounded-xl bg-red-50 text-red-800 border border-red-200">
      <h3 class="font-semibold mb-2">Please fix the following errors:</h3>
      <ul class="list-disc list-inside text-sm">
        <% prize.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-input", placeholder: "e.g., Movie Night, Ice Cream Trip, Extra Screen Time" %>
  </div>

  <div>
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 3, class: "form-textarea",
        placeholder: "Describe what this prize includes..." %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :point_cost, "Point Cost", class: "form-label" %>
      <div class="relative">
        <%= f.number_field :point_cost, min: 0, class: "form-input pl-10" %>
        <div class="absolute left-3 top-1/2 -translate-y-1/2">
          <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.736 6.979C9.208 6.193 9.696 6 10 6c.304 0 .792.193 1.264.979a1 1 0 001.715-1.029C12.279 4.784 11.232 4 10 4s-2.279.784-2.979 1.95c-.285.475-.507 1-.67 1.55H6a1 1 0 000 2h.013a9.358 9.358 0 000 1H6a1 1 0 100 2h.351c.163.55.385 1.075.67 1.55C7.721 15.216 8.768 16 10 16s2.279-.784 2.979-1.95a1 1 0 10-1.715-1.029c-.472.786-.96.979-1.264.979-.304 0-.792-.193-1.264-.979a4.265 4.265 0 01-.264-.521H10a1 1 0 100-2H8.017a7.36 7.36 0 010-1H10a1 1 0 100-2H8.472c.08-.185.167-.36.264-.521z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div>
      <p class="form-label">Status</p>
      <label class="flex items-center gap-2 p-3 rounded-lg bg-gray-50 cursor-pointer">
        <%= f.check_box :active, class: "form-checkbox" %>
        <span class="text-sm font-medium">Active (visible to kids)</span>
      </label>
    </div>
  </div>

  <div>
    <%= f.label :image, class: "form-label" %>
    <% if prize.image.attached? %>
      <div class="mb-3">
        <%= image_tag prize.image, class: "w-40 h-40 object-cover rounded-xl" %>
      </div>
    <% end %>
    <%= f.file_field :image, accept: "image/*", class: "block w-full text-sm text-gray-500
      file:mr-4 file:py-2 file:px-4
      file:rounded-xl file:border-0
      file:text-sm file:font-semibold
      file:bg-purple-50 file:text-purple-700
      hover:file:bg-purple-100" %>
    <p class="text-sm text-gray-500 mt-1">Optional: Upload an image for this prize.</p>
  </div>

  <div class="flex gap-3 pt-4 border-t">
    <%= f.submit prize.persisted? ? "Update Prize" : "Create Prize", class: "btn-primary" %>
    <%= link_to "Cancel", admin_prizes_path, class: "btn-secondary" %>
  </div>
<% end %>
