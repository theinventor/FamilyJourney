<div class="page-header">
  <h1 class="page-title">Edit Prize</h1>
  <%= link_to "Back", admin_prizes_path, class: "btn-outline" %>
</div>

<div class="card max-w-2xl">
  <%= render "form", prize: @prize %>
</div>

<div class="max-w-2xl mt-8">
  <%= button_to "Delete Prize", admin_prize_path(@prize),
      method: :delete,
      class: "btn-danger",
      data: { turbo_confirm: "Are you sure you want to delete this prize?" } %>
</div>
