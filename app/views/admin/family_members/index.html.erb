<div class="page-header">
  <h1 class="page-title">Family Parents</h1>
  <div class="flex gap-3">
    <% if @pending_invites_count && @pending_invites_count > 0 %>
      <%= link_to admin_invites_path, class: "btn-secondary" do %>
        Pending Invites (<%= @pending_invites_count %>)
      <% end %>
    <% end %>
    <%= link_to "Invite Parent", new_admin_invite_path, class: "btn-primary" %>
  </div>
</div>

<div class="card">
  <% if @parents.any? %>
    <div class="space-y-3">
      <% @parents.each do |parent| %>
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl">
          <div class="flex items-center gap-3">
            <div class="avatar gradient-coral text-white">
              <%= parent.name.first.upcase %>
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-800"><%= parent.name %></h3>
              <p class="text-sm text-gray-500"><%= parent.email %></p>
              <p class="text-xs text-gray-400 mt-1">Joined <%= parent.created_at.strftime("%b %d, %Y") %></p>
            </div>
          </div>
          <div class="text-right">
            <% if parent.accepted_invites.any? %>
              <p class="text-xs text-gray-500">
                Invited by <%= parent.accepted_invites.first.invited_by.name %>
              </p>
            <% else %>
              <span class="text-xs bg-purple-100 text-purple-700 px-2 py-1 rounded">Family Creator</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
      </svg>
      <h3 class="empty-state-title">No parents found</h3>
      <p class="empty-state-text">This shouldn't happen!</p>
    </div>
  <% end %>
</div>

