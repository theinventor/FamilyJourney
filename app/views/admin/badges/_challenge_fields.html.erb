<div class="challenge-field flex gap-3 p-4 bg-gray-50 rounded-xl">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy, class: "destroy-field" %>

  <div class="flex-shrink-0 pt-2">
    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"></path>
    </svg>
  </div>

  <div class="flex-1 space-y-3">
    <div>
      <%= f.text_field :title, class: "form-input", placeholder: "Challenge title (e.g., Read Chapter 1)" %>
    </div>
    <div>
      <%= f.text_area :description, rows: 2, class: "form-textarea", placeholder: "Optional description..." %>
    </div>
  </div>

  <div class="flex-shrink-0">
    <button type="button" class="remove-challenge p-2 text-red-500 hover:text-red-700 hover:bg-red-50 rounded-lg transition">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    </button>
  </div>
</div>
