<%= form_with model: [:admin, badge], class: "space-y-6", data: { controller: "nested-form" } do |f| %>
  <% if badge.errors.any? %>
    <div class="p-4 rounded-xl bg-red-50 text-red-800 border border-red-200">
      <h3 class="font-semibold mb-2">Please fix the following errors:</h3>
      <ul class="list-disc list-inside text-sm">
        <% badge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-input", placeholder: "e.g., Make Your Bed, Read 10 Books" %>
    </div>

    <div>
      <%= f.label :badge_category_id, "Category", class: "form-label" %>
      <%= f.collection_select :badge_category_id, current_user.family.badge_categories, :id, :name,
          { include_blank: "No Category" }, class: "form-select" %>
    </div>
  </div>

  <div>
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 2, class: "form-textarea",
        placeholder: "Brief description shown to kids..." %>
  </div>

  <div>
    <%= f.label :instructions, class: "form-label" %>
    <%= f.text_area :instructions, rows: 4, class: "form-textarea",
        placeholder: "Detailed instructions for earning this badge..." %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :points, class: "form-label" %>
      <div class="relative">
        <%= f.number_field :points, min: 0, class: "form-input pl-10" %>
        <div class="absolute left-3 top-1/2 -translate-y-1/2">
          <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.736 6.979C9.208 6.193 9.696 6 10 6c.304 0 .792.193 1.264.979a1 1 0 001.715-1.029C12.279 4.784 11.232 4 10 4s-2.279.784-2.979 1.95c-.285.475-.507 1-.67 1.55H6a1 1 0 000 2h.013a9.358 9.358 0 000 1H6a1 1 0 100 2h.351c.163.55.385 1.075.67 1.55C7.721 15.216 8.768 16 10 16s2.279-.784 2.979-1.95a1 1 0 10-1.715-1.029c-.472.786-.96.979-1.264.979-.304 0-.792-.193-1.264-.979a4.265 4.265 0 01-.264-.521H10a1 1 0 100-2H8.017a7.36 7.36 0 010-1H10a1 1 0 100-2H8.472c.08-.185.167-.36.264-.521z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div>
      <p class="form-label">Assign to Groups</p>
      <div class="space-y-2">
        <% current_user.family.groups.each do |group| %>
          <label class="flex items-center gap-2 p-2 rounded-lg hover:bg-gray-50 cursor-pointer">
            <%= f.check_box :group_ids, { multiple: true, class: "form-checkbox" }, group.id, nil %>
            <span class="text-sm font-medium"><%= group.name %></span>
            <span class="text-xs text-gray-500">(<%= group.users.count %> members)</span>
          </label>
        <% end %>
        <% if current_user.family.groups.empty? %>
          <p class="text-sm text-gray-500">No groups yet. <%= link_to "Create a group", new_admin_group_path, class: "text-purple-600 hover:underline" %> first.</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="border-t pt-6" id="challenges">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h3 class="text-lg font-bold text-gray-800">Challenges (Optional)</h3>
        <p class="text-sm text-gray-500">Add step-by-step challenges that kids must complete before submitting.</p>
      </div>
    </div>

    <div id="challenges-container" class="space-y-3">
      <%= f.fields_for :badge_challenges do |challenge_form| %>
        <%= render "admin/badges/challenge_fields", f: challenge_form %>
      <% end %>
    </div>

    <template id="challenge-template">
      <%= f.fields_for :badge_challenges, BadgeChallenge.new, child_index: "NEW_RECORD" do |challenge_form| %>
        <%= render "admin/badges/challenge_fields", f: challenge_form %>
      <% end %>
    </template>

    <button type="button" id="add-challenge" class="mt-4 btn-secondary btn-sm">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add Challenge
    </button>
  </div>

  <div class="flex gap-3 pt-4 border-t">
    <%= f.submit badge.persisted? ? "Update Badge" : "Create Badge", class: "btn-primary" %>
    <%= link_to "Cancel", badge.persisted? ? admin_badge_path(badge) : admin_badges_path, class: "btn-secondary" %>
  </div>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const addButton = document.getElementById('add-challenge');
    const container = document.getElementById('challenges-container');
    const template = document.getElementById('challenge-template');

    if (addButton && container && template) {
      addButton.addEventListener('click', function() {
        const content = template.innerHTML.replace(/NEW_RECORD/g, new Date().getTime());
        container.insertAdjacentHTML('beforeend', content);
      });

      container.addEventListener('click', function(e) {
        if (e.target.closest('.remove-challenge')) {
          const field = e.target.closest('.challenge-field');
          const destroyInput = field.querySelector('[name*="_destroy"]');
          if (destroyInput) {
            destroyInput.value = '1';
            field.style.display = 'none';
          } else {
            field.remove();
          }
        }
      });
    }
  });
</script>
