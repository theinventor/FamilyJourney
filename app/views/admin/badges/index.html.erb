<%# Subscribe to badge updates %>
<%= turbo_stream_from current_user.family, "badges_admin" %>

<div class="page-header">
  <h1 class="page-title">Badges</h1>
  <%= link_to "New Badge", new_admin_badge_path, class: "btn-primary" %>
</div>

<% if @badges.any? %>
  <div class="card">
    <table class="table">
      <thead>
        <tr>
          <th>Badge</th>
          <th>Category</th>
          <th>Points</th>
          <th>Groups</th>
          <th>Status</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @badges.each do |badge| %>
          <tr>
            <td>
              <div class="flex items-center gap-3">
                <div class="p-2 rounded-xl gradient-purple">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-gray-800"><%= badge.title %></p>
                  <% if badge.multi_challenge? %>
                    <p class="text-xs text-gray-500"><%= badge.badge_challenges.count %> challenges</p>
                  <% end %>
                </div>
              </div>
            </td>
            <td><%= badge.badge_category&.name || "â€”" %></td>
            <td>
              <span class="inline-flex items-center gap-1 text-yellow-600 font-semibold">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.736 6.979C9.208 6.193 9.696 6 10 6c.304 0 .792.193 1.264.979a1 1 0 001.715-1.029C12.279 4.784 11.232 4 10 4s-2.279.784-2.979 1.95c-.285.475-.507 1-.67 1.55H6a1 1 0 000 2h.013a9.358 9.358 0 000 1H6a1 1 0 100 2h.351c.163.55.385 1.075.67 1.55C7.721 15.216 8.768 16 10 16s2.279-.784 2.979-1.95a1 1 0 10-1.715-1.029c-.472.786-.96.979-1.264.979-.304 0-.792-.193-1.264-.979a4.265 4.265 0 01-.264-.521H10a1 1 0 100-2H8.017a7.36 7.36 0 010-1H10a1 1 0 100-2H8.472c.08-.185.167-.36.264-.521z"></path>
                </svg>
                <%= badge.points %>
              </span>
            </td>
            <td>
              <% if badge.groups.any? %>
                <%= badge.groups.map(&:name).join(", ") %>
              <% else %>
                <span class="text-gray-400">Not assigned</span>
              <% end %>
            </td>
            <td>
              <% if badge.published? %>
                <span class="status-earned">Published</span>
              <% else %>
                <span class="status-pending">Draft</span>
              <% end %>
            </td>
            <td class="text-right">
              <div class="flex justify-end gap-2">
                <%= link_to "View", admin_badge_path(badge), class: "btn-secondary btn-sm" %>
                <%= link_to "Edit", edit_admin_badge_path(badge), class: "btn-outline btn-sm" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="card">
    <div class="empty-state">
      <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
      </svg>
      <h3 class="empty-state-title">No badges yet</h3>
      <p class="empty-state-text mb-4">Create badges for your kids to earn.</p>
      <%= link_to "Create Your First Badge", new_admin_badge_path, class: "btn-primary" %>
    </div>
  </div>
<% end %>
