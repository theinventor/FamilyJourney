<div class="max-w-2xl mx-auto">
  <div class="page-header">
    <h1 class="page-title"><%= @prize.name %></h1>
    <%= link_to "Back", prizes_path, class: "btn-outline" %>
  </div>

  <div class="card">
    <% if @prize.image.attached? %>
      <%= image_tag @prize.image, class: "w-full h-60 object-cover rounded-xl mb-6" %>
    <% else %>
      <div class="w-full h-60 bg-gradient-to-br from-yellow-100 to-orange-100 rounded-xl mb-6 flex items-center justify-center">
        <svg class="w-24 h-24 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
        </svg>
      </div>
    <% end %>

    <div class="flex items-center justify-between mb-6">
      <span class="inline-flex items-center gap-2 text-2xl text-yellow-600 font-bold">
        <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.736 6.979C9.208 6.193 9.696 6 10 6c.304 0 .792.193 1.264.979a1 1 0 001.715-1.029C12.279 4.784 11.232 4 10 4s-2.279.784-2.979 1.95c-.285.475-.507 1-.67 1.55H6a1 1 0 000 2h.013a9.358 9.358 0 000 1H6a1 1 0 100 2h.351c.163.55.385 1.075.67 1.55C7.721 15.216 8.768 16 10 16s2.279-.784 2.979-1.95a1 1 0 10-1.715-1.029c-.472.786-.96.979-1.264.979-.304 0-.792-.193-1.264-.979a4.265 4.265 0 01-.264-.521H10a1 1 0 100-2H8.017a7.36 7.36 0 010-1H10a1 1 0 100-2H8.472c.08-.185.167-.36.264-.521z"></path>
        </svg>
        <%= @prize.point_cost %> points
      </span>
      <div>
        <p class="text-sm text-gray-500">Your balance</p>
        <p class="font-bold text-gray-800"><%= current_user.available_points %> points</p>
      </div>
    </div>

    <% if @prize.description.present? %>
      <p class="text-gray-700 mb-6"><%= @prize.description %></p>
    <% end %>

    <% if @can_afford %>
      <div class="p-4 rounded-xl bg-green-50 border border-green-200 mb-6">
        <div class="flex items-center gap-2 text-green-800">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span class="font-semibold">You can afford this prize!</span>
        </div>
      </div>
      <%= link_to "Request This Prize", new_redemption_path(prize_id: @prize.id), class: "btn-success w-full" %>
    <% else %>
      <div class="p-4 rounded-xl bg-yellow-50 border border-yellow-200 mb-6">
        <div class="flex items-center gap-2 text-yellow-800">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
          <span class="font-semibold">You need <%= @points_needed %> more points</span>
        </div>
      </div>
      <button disabled class="btn bg-gray-300 text-gray-500 cursor-not-allowed w-full">
        Not Enough Points
      </button>
    <% end %>
  </div>
</div>
