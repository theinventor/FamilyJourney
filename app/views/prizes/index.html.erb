<div class="page-header">
  <div>
    <h1 class="page-title">Prizes</h1>
    <p class="text-gray-600 mt-1">You have <strong class="text-yellow-600"><%= current_user.available_points %></strong> points to spend</p>
  </div>
</div>

<% if @prizes.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @prizes.each do |prize| %>
      <% can_afford = current_user.can_afford?(prize) %>
      <%= link_to prize_path(prize), class: "card card-hover block" do %>
        <% if prize.image.attached? %>
          <%= image_tag prize.image, class: "w-full h-40 object-cover rounded-xl mb-4" %>
        <% else %>
          <div class="w-full h-40 bg-gradient-to-br from-yellow-100 to-orange-100 rounded-xl mb-4 flex items-center justify-center">
            <svg class="w-16 h-16 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
            </svg>
          </div>
        <% end %>

        <h3 class="text-lg font-bold text-gray-800 mb-1"><%= prize.name %></h3>

        <% if prize.description.present? %>
          <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= prize.description %></p>
        <% end %>

        <div class="flex items-center justify-between">
          <span class="inline-flex items-center gap-1 text-yellow-600 font-bold">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.736 6.979C9.208 6.193 9.696 6 10 6c.304 0 .792.193 1.264.979a1 1 0 001.715-1.029C12.279 4.784 11.232 4 10 4s-2.279.784-2.979 1.95c-.285.475-.507 1-.67 1.55H6a1 1 0 000 2h.013a9.358 9.358 0 000 1H6a1 1 0 100 2h.351c.163.55.385 1.075.67 1.55C7.721 15.216 8.768 16 10 16s2.279-.784 2.979-1.95a1 1 0 10-1.715-1.029c-.472.786-.96.979-1.264.979-.304 0-.792-.193-1.264-.979a4.265 4.265 0 01-.264-.521H10a1 1 0 100-2H8.017a7.36 7.36 0 010-1H10a1 1 0 100-2H8.472c.08-.185.167-.36.264-.521z"></path>
            </svg>
            <%= prize.point_cost %>
          </span>
          <% if can_afford %>
            <span class="status-ready">Can Afford!</span>
          <% else %>
            <span class="text-sm text-gray-500">Need <%= prize.point_cost - current_user.available_points %> more</span>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="card">
    <div class="empty-state">
      <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
      </svg>
      <h3 class="empty-state-title">No prizes available</h3>
      <p class="empty-state-text">Ask your parents to add some prizes!</p>
    </div>
  </div>
<% end %>
